# PostgreSQL server host
PG_HOST=

# PostgreSQL port (usually 5432)
PG_PORT=

# PostgreSQL database name
PG_NAME=

# PostgreSQL user
PG_USER=

# PostgreSQL user password
PG_PASS=

# Redis server host
REDIS_HOST=

# Redis port (usually 6379)
REDIS_PORT=

# Full Redis connection URL (e.g., redis://user:pass@host:port)
REDIS_URL=

# Port the application will run on
PORT=

# Application environment (development, production, etc.)
NODE_ENV=

# Public application URL (e.g., https://myapp.com)
APP_URL=

# Secret used for data encryption
ENCODE_SECRET=

# Default template language
TEMPLATE_LANGUAGE=pt-BR

# Name of the root/admin user
ROOT_USER_NAME=

# Password of the root/admin user
ROOT_USER_PASS=

# Email of the root/admin user
ROOT_USER_EMAIL=

# Email used for SMTP sending
SMTP_EMAIL=

# Password for the SMTP account
SMTP_PASS=
